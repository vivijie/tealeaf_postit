
<% @posts.each do |post|%>

  <div class="well span8">
  	<h4><%= link_to post.title, fix_url(post.url) %></h4>	
  	<%= post.description %>
  	<br/>
    <a href="<%= post_path(post.id) %>"><%= post.comments.size %> comments
    </a>

    <br/>
    posted by Neil at <%= post.created_at %> 
  </div>



<% end %>

