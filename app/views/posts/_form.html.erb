<% if @post.errors.any? %>
  <h4><%= pluralize(@post.errors.count, "error") %> prohibited this
      post from being saved:</h4>
  <div class="alert alert-error">
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>
  <%= f.submit "Create Post", class: 'btn btn-primary' %>
  <%= link_to "Back",  post_path(@post), class: 'btn btn-primary' %>
<% end %>