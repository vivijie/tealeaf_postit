<% show_post ||= false %>

<div class="well span8">
	<%= comment.body %>
	<% if show_post %>
	on <%= link_to comment.post.title, post_path(comment.post) %>
	<% end %>
	<br/>
	<span class='quiet'>by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
	<small>at <%= comment.created_at %></small>
</div>
